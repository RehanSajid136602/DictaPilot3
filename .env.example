## Copy this file to `.env` and replace with your real API key and settings.
# Never commit your real API key to source control.
# Add Groq API key in Double Quotes below after the equals sign.
GROQ_API_KEY=
# Optional: change the hotkey used to record (examples: f8, f9)
HOTKEY=f9
# Optional: enable smart dictation (1=on, 0=off)
SMART_EDIT=1
# Optional: intent parsing mode (heuristic or llm)
SMART_MODE=llm
# Optional: in llm mode, clean every utterance (1) or only likely command edits (0)
LLM_ALWAYS_CLEAN=1
# Optional: paste behavior (delta or full)
PASTE_MODE=delta
# Optional: paste injection backend (auto, x11, keyboard, pynput, xdotool, osascript)
PASTE_BACKEND=auto
# Optional: global hotkey backend (auto, x11, pynput, keyboard)
HOTKEY_BACKEND=auto
# Optional: floating mini-window size and visualizer density
FLOATING_WIDTH=180
FLOATING_HEIGHT=44
# Clamped to 3-6 bars in UI code
FLOATING_BAR_COUNT=5
# Optional: show/hide close button in floating window (1=show, 0=hide)
FLOATING_CLOSE_BUTTON=1
# Optional: floating visual style (professional_minimal or high_contrast)
FLOATING_THEME=professional_minimal
# Optional: animation intensity profile (expressive, balanced, reduced)
FLOATING_MOTION_PROFILE=expressive
# Optional: glow strength multiplier (0.0 to 1.6)
FLOATING_GLOW_INTENSITY=1.0
# Optional: bar roundness multiplier (0.5 to 1.5)
FLOATING_BAR_RADIUS=1.0
# Optional: shell border opacity (8 to 255)
FLOATING_BORDER_ALPHA=72
# Optional: reset transcript each time you press the hotkey (1=yes, 0=keep session history)
RESET_TRANSCRIPT_EACH_RECORDING=1
# Optional: prefer instant paste then refined update (1=on, 0=off)
INSTANT_REFINE=1
# Optional: dictation intelligence mode (speed, balanced, accurate)
DICTATION_MODE=accurate
# Optional: cleanup strength (basic, balanced, aggressive)
CLEANUP_LEVEL=aggressive
# Optional: default tone and language for rephrasing
DEFAULT_TONE=polite
DEFAULT_LANGUAGE=english
# Optional: active profile id from profile bundle (e.g. default, legal_writer)
ACTIVE_PROFILE=default
# Optional: override active app name (for per-app profiles)
ACTIVE_APP=
# Optional: audio capture settings
SAMPLE_RATE=16000
CHANNELS=1
TRIM_SILENCE=1
SILENCE_THRESHOLD=0.02
# Optional: personal dictionary/snippets paths
PERSONAL_DICTIONARY_PATH=
SNIPPETS_PATH=
# Optional: profile bundle path generated/imported from website onboarding
PROFILE_BUNDLE_PATH=
# Optional: whisper transcription model
GROQ_WHISPER_MODEL=whisper-large-v3-turbo
# Optional: chat model when SMART_MODE=llm
GROQ_CHAT_MODEL=openai/gpt-oss-120b
# Optional faster fallback (typically less accurate cleanup): openai/gpt-oss-20b

# Streaming Transcription Settings
# Optional: enable real-time streaming preview during recording (1=on, 0=off)
STREAMING_ENABLED=1
# Optional: audio chunk duration in seconds for streaming (0.5-5.0)
STREAMING_CHUNK_DURATION=1.5
# Optional: overlap between chunks for accuracy (0.0-1.0)
STREAMING_CHUNK_OVERLAP=0.3
# Optional: minimum chunks before showing preview
STREAMING_MIN_CHUNKS=2
# Optional: run final accuracy pass on complete audio (1=on, 0=off)
STREAMING_FINAL_PASS=1

# Agent Mode Settings
# Optional: operation mode (dictation or agent)
MODE=dictation
# Optional: auto-detect agent mode from speech content (1=on, 0=off)
AGENT_AUTO_DETECT=1
# Optional: agent output format (structured, markdown, plain)
AGENT_OUTPUT_FORMAT=structured
# Optional: webhook URL for agent integration (e.g., IDE or AI assistant)
AGENT_WEBHOOK_URL=
# Optional: enable IDE integration for agent mode (1=on, 0=off)
AGENT_IDE_INTEGRATION=0
